{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <a href="{{ path('blog_homepage') }}" class="btn btn-primary active" role="button">< Homepage</a>
    <section>
        <h1>{{ post.title }}, by {{ post.author.name }}</h1>
        <small>Created at {{ post.createdDate|date('d/m/Y') }}</small>
        <p>{{ post.content|raw }}</p>
    </section>
{% endblock %}
